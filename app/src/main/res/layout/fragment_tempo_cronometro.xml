<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.TempoCronometroFragment"
    android:background="@color/blackDialog"
    android:paddingVertical="15dp">

    <RelativeLayout
        android:id="@+id/layout_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >


        <NumberPicker
            android:id="@+id/editTempoSegundoCronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/informe_cronometro"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/textoDoisPontos"
            android:background="@color/white"
            android:foregroundTint="@color/black"
            android:theme="@style/Theme.AppCompat.Light"></NumberPicker>

        <TextView
            android:id="@+id/textoDoisPontos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/informe_cronometro"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingTop="50dp"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="45dp" />

        <NumberPicker
            android:id="@+id/editTempoMinutoCronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/informe_cronometro"
            android:layout_toLeftOf="@id/textoDoisPontos"
            android:background="@color/white"
            android:foregroundTint="@color/black"
            android:theme="@style/Theme.AppCompat.Light"></NumberPicker>


        <TextView
            android:id="@+id/informe_cronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="40dp"
            android:text="Escolha o tempo"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirmar_tempo_cronometro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/layout_picker"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botao_confirma"
        android:text="Confirmar"
        android:textColor="@color/black"
        android:textColorHint="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        />
</RelativeLayout>