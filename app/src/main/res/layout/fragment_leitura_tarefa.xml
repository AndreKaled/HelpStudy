<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LeituraTarefa">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/voltarBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/baseline_keyboard_return_24" />

        <TextView
            android:id="@+id/tituloTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Titulo da tarefa"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricaoTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:text="Descrição"
            android:layout_below="@id/tituloTarefa"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricaoTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:text="texto descrição"
            android:layout_below="@id/descricaoTarefa"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dataTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Data"
            android:layout_below="@id/descricaoTexto"
            android:layout_marginLeft="25dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/data"
            android:layout_width= "wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataTarefa"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:textSize="18sp"
            android:hint="dd/mm/nnnn"
            android:inputType="date"
            android:enabled="false" />

</RelativeLayout>